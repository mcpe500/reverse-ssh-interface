{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Reverse SSH Interface",
  "identifier": "com.reverse-ssh.interface",
  "version": "0.1.0",
  "build": {
    "frontendDist": "ui"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Reverse SSH Interface",
        "width": 1100,
        "height": 750,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "center": true,
        "decorations": true,
        "transparent": false,
        "visible": true
      }
    ],
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false
    },
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "shortDescription": "Manage Reverse SSH Tunnels",
    "longDescription": "A powerful desktop application for managing reverse SSH tunnels with ease. Create profiles, monitor connections, and maintain persistent tunnels."
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "notification": {
      "all": true
    }
  }
}
